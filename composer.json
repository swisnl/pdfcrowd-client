{
    "name": "swisnl/pdfcrowd-client",
    "type": "library",
    "description": "A client for the pdfcrowd.com API. Includes a Laravel service provider.",
    "keywords": [
        "swisnl",
        "pdfcrowd-client",
        "pdfcrowd",
        "api",
        "client",
        "pdf",
        "html2pdf",
        "swis",
        "laravel"
    ],
    "homepage": "https://github.com/swisnl/pdfcrowd-client",
    "license": "MIT",
    "authors": [
        {
            "name": "Barry van Veen",
            "email": "barry@swis.nl",
            "homepage": "https://www.swis.nl/",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~7.0",
        "guzzlehttp/guzzle": "~6.0",
        "illuminate/support": "5.*|~6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~6.0",
        "squizlabs/php_codesniffer": "^2.3",
        "vlucas/phpdotenv": "^2.4"
    },
    "autoload": {
        "psr-4": {
            "Swis\\PdfcrowdClient\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Swis\\PdfcrowdClient\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        },
        "laravel": {
            "providers": [
                "Swis\\PdfcrowdClient\\PdfcrowdServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    }
}
